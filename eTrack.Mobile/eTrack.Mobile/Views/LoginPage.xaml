    <NavigationPage.TitleView>
        <StackLayout Margin="0,0,4,0" Orientation="Horizontal">
            <Label Text="{Binding Title}"></Label>
        </StackLayout>
    </NavigationPage.TitleView>
    <AbsoluteLayout>
        <StackLayout Spacing="0" Margin="10,35,10,10"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Label Text="Usuario" HorizontalOptions="Start" FontAttributes="Bold" />
            <Entry Text="{Binding UserName,Mode=TwoWay}" Placeholder="ingrese su nombre de usuario" HeightRequest="40" MaxLength="30" />
            <Label Text="Contraseña" HorizontalOptions="Start" FontAttributes="Bold" />
            <Entry Text="{Binding UserPassword,Mode=TwoWay}" IsPassword="true" Placeholder="ingrese su contraseña" HeightRequest="40" MaxLength="20" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Text="INGRESAR" Command="{Binding LoginCommand}" />
            </Grid>
        </StackLayout>

        <!-- Indicador de actividad -->
        <ActivityIndicator IsRunning="{Binding IsBusy}" Color="Red"  AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".5,.5,-1,-1" />
    </AbsoluteLayout>
